.rightCol Right Column

.main
  %h1 登录

  - form_for @user_session, :url => user_session_path do |f|
    .field
      = f.label :login, "名号", :class => "title block"
      = f.text_field :login, :class => "input-field"

    .field
      = f.label :password, "密码", :class => "title block"
      = f.password_field :password, :class => "input-field"

    .field
      = f.label :remember_me, "记住我", :class => "title block"
      = f.check_box :remember_me

    .field
      = f.submit "登录" ,:class => "common-btn"

  = javascript_include_tag "jquery.validate", "login"
